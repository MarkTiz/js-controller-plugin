{
  "manifest_version": 3,
  "name": "JS 控制器",
  "version": "1.0",
  "description": "控制网页JavaScript的开关",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/js16.png",
      "32": "images/js32.png",
      "48": "images/js48.png",
      "128": "images/js128.png"
    }
  },
  "icons": {
    "16": "images/js16.png",
    "32": "images/js32.png",
    "48": "images/js48.png",
    "128": "images/js128.png"
  }
} 